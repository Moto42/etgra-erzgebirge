---
layout: "layouts/1_base.njk"
---

{# the "Holy grail" layout, # A header and footer, with a center section
between, containing left and right # sidebars and a cetral content section. #}

{% from "widgets/text.njk" import sidebarLinks %}

{% include "components/header.njk" %}
<div class="flex flex-col md:flex-row grow w-full">
  {% if sidebar_left %}
  <aside class="bg-txinfomedia-bg-aside flex-none md:w-60">
    <div class="">
      {% block sidebar_left %} {{ sidebarLinks(content) }} {% endblock %}
    </div>
  </aside>
  {% endif %}
  <main class="grow bg-txinfomedia-bg-main flex flex-col gap-4">
    {% if content %} {{ content | safe}} {% else %}
    <h1>Default content of 2_hmf</h1>
    {% endif %}
  </main>
  {% if sidebar_right %}
  <aside class="bg-txinfomedia-bg-aside flex-none md:w-60">
    {% block sidebar_right %} Right Sidebar {% endblock %}
  </aside>
  {% endif %}
</div>
{% include "components/footer.njk" %}
