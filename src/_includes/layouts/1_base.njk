{# Base layout from hence all others flow. Just set's up the basic HTML and
headers. #}

<!DOCTYPE html>
{{oneline-}}
<html class="bg-txinfomedia-bg-farback"
  lang="en"
>
{{-endoneline}}
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{title}}</title>
    <link rel="stylesheet" href="/css/tailwind.css?v={{random4Digit}}" />
    {# TODO: install alpine to project and bundle it #}
    <script src="https://cdn.jsdelivr.net/npm/@alpine-collective/toolkit@1.0.2/dist/cdn.min.js" defer></script>
    <script
      defer
      src="https://cdn.jsdelivr.net/npm/alpinejs@3.13.0/dist/cdn.min.js"
    ></script>
    <link rel="icon" type="image/png" href="/images/favicon.svg" />
  </head>
  {{oneline-}}
  <body
    class="
      flex flex-col items-center 
      min-h-screen mx-auto
      w-full max-w-5xl
      bg-txinfomedia-bg-main
      shadow-lg
      font-serif
    "
  >
    {{content | safe}}
  </body>
  {{-endoneline}}
</html>
