{# Template for the homepage, pulls data from index.11tydata.json #}

{% from "widgets/banners.njk" import rotatingBanner %}
{% from "widgets/cards.njk" import horizontalCard %}
{% from "widgets/text.njk" import styledMarkdown %}

{{rotatingBanner(herobanner)}}

<div class="flex justify-center gap-4">
    {% for card in featurecards %}
        {{horizontalCard(card.headline,card.blurb,card.icon,card.link,card.imgattr)}}
    {% endfor %}
</div>

<div class="mx-auto w-full max-w-3xl">
    {% for item in content %}
        {% if item.type == 'text' %}
            {{styledMarkdown(item.text)}}
        {% elseif item.type == 'banner' %}
            {% widgets_banner item.headinglevel, item.heading, item.image %}
        {% endif %}
    {% endfor %}
</div>